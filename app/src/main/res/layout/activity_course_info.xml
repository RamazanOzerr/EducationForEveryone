<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.UserProfile.UserProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_show_course_activity"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/baby_blue"
            app:title="Course İnfo"
            app:titleTextColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_course_show"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Fatih Terim"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_bio_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_course_name"
            android:text="Türkiyenin en taşaklı teknik direktörü"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_marginTop="20dp"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_classes_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bio_course"
            android:text="italyanca, futbol, Galatasaray, am"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_time_course"
            app:layout_constraintTop_toBottomOf="@+id/text_classes_course"
            android:text="@string/button_send_message"
            android:backgroundTint="@color/electricblue"
            android:layout_marginTop="60dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_show_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/text_time_course"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_classes_course"
            android:text="@string/button_show_profile"
            android:backgroundTint="#2AE1EA"
            android:layout_marginTop="60dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_time_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:text="10:00 PM"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toEndOf="@id/button_send_message"
            app:layout_constraintTop_toBottomOf="@id/text_classes_course" />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/button_logout"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/button_save"-->
        <!--            android:text="@string/button_logout"-->
        <!--            android:backgroundTint="@color/blue_green"-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            />-->


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>